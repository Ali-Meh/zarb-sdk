{
  "name": "zarb-sdk",
  "version": "0.0.1",
  "description": "Nodejs SDK For Zarb Blockchain",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --verbose",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "dev:start": "ts-node src/index.ts",
    "dev": "nodemon -e js,ts,json,env --exec npm run dev:start",
    "dev:exp": "nodemon -e js,ts,json,env --exec ts-node example/send_transaction.ts",
    "dev:test": "nodemon -e js,ts,json,env --exec npm run test"
  },
  "repository": {
    "type": "git",
    "url": "github.com/ali-meh/zarb-sdk"
  },
  "keywords": [
    "Blockchain",
    "SDK",
    "ZARB"
  ],
  "author": "Ali Mahdavi(a5mahdavy5@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.2",
    "@grpc/proto-loader": "^0.6.2",
    "google-protobuf": "^3.17.1",
    "bech32-buffer": "^0.1.3",
    "bignumber.js": "^9.0.1",
    "blake2": "^4.0.2",
    "bls-wasm": "^0.4.4",
    "cbor": "^7.0.5",
    "dotenv": "^10.0.0",
    "jest": "^26.6.3",
    "ripemd160": "^2.0.2"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.2",
    "@types/jest": "^26.0.23",
    "grpc_tools_node_protoc_ts": "^5.2.2",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "dist/**/*"
  ]
}
